{
  "name": "roadie",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "next dev --port 3001",
    "dev:frontend": "cd music-collab && npm run dev",
    "ports:free": "node -e \"const {execSync}=require('child_process'); ['3000','3001'].forEach(p=>{try{execSync('lsof -ti tcp:'+p+' -sTCP:LISTEN | xargs kill -9',{stdio:'ignore'})}catch(e){}})\"",
    "dev:clean": "npm run ports:free && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "next build",
    "build:frontend": "cd music-collab && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "next start --port 3001",
    "start:frontend": "cd music-collab && npm run start --port 3000",
    "lint": "eslint && cd music-collab && npm run lint",
    "install:all": "npm install && cd music-collab && npm install"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@types/isomorphic-fetch": "^0.0.39",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "claude": "^0.1.1",
    "clsx": "^2.1.1",
    "dropbox": "^10.34.0",
    "googleapis": "^160.0.0",
    "isomorphic-fetch": "^3.0.0",
    "lucide-react": "^0.542.0",
    "music-metadata": "^11.9.0",
    "next": "15.5.2",
    "openai": "^5.19.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.0.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
